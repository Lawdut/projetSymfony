{% extends 'base.html.twig' %}

{% block title %}Hello ContinentController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Les continents</h1>

    <ul>
    {% for continent in continents %}
        <p> {{continent.libelle}}

        {% for animaux in continent.animaux %}
            {{animaux.nom}}
            {{animaux.famille}}
            {{animaux.espece.libelle}}
        {% endfor %}

    {% endfor %}

    </ul>
</div>
{% endblock %}
